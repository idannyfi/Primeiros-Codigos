import sys

print('='*35)
print('Progressão Aritmética melhorada! ')
print('='*35)

primeiro = int(input('Primeiro Termo: '))
razao = int(input('Razão da P.A: '))
termo = primeiro
count = 1
total = 0
seguindo = 10

while seguindo != 0:
    total = total + seguindo
    while count <= total:
        print(f' {termo} > ',end='')
        termo = termo + razao
        count = count + 1
    print('\033[033mEsperando...\033[m')
    seguindo = int(input('Quantos termos a mais você deseja?: '))
print(f'P.A finalizada, o total de termos foi {total}')

sys.exit()

